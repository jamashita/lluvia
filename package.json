{
  "name": "@jamashita/lluvia",
  "version": "1.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:jamashita/lluvia.git"
  },
  "license": "MIT",
  "author": "jamashita <jamashita@arachnid.xyz>",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "yarn clean && tsc -b tsconfig.compilation.json",
    "clean": "rimraf dist",
    "commit": "git cz",
    "format": "eslint --fix 'src/**/*.{ts,tsx}'",
    "prepare": "is-ci || husky install",
    "release": "semantic-release",
    "test": "vitest",
    "update": "yarn update:upgrade && yarn update:install",
    "update:install": "yarn install && yarn upgrade && yarn audit fix --force",
    "update:upgrade": "ncu --packageManager yarn --deep --upgrade"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@jamashita/eslint-plugin": "1.78.0",
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/node": "18.11.17",
    "git-cz": "4.9.0",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "lint-staged": "13.1.0",
    "npm-check-updates": "16.5.5",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.5",
    "sort-package-json": "2.1.0",
    "typescript": "4.9.4",
    "vite": "4.0.1",
    "vitest": "0.25.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/"
  }
}
