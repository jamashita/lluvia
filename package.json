{
  "name": "@jamashita/lluvia",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:jamashita/lluvia.git"
  },
  "license": "MIT",
  "author": "jamashita <jamashita@arachnid.xyz>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --parallel build",
    "clean": "rimraf coverage && lerna run --parallel clean",
    "commit": "git cz",
    "format": "eslint --fix 'packages/*/src/**/*.{ts,tsx}'",
    "prepare": "is-ci || husky install",
    "release": "lerna exec --concurrency 1 -- semantic-release -e semantic-release-monorepo",
    "setup": "lerna bootstrap && lerna link",
    "test": "jest test",
    "update": "yarn setup && yarn update:upgrade && yarn update:install",
    "update:install": "yarn install && yarn upgrade && yarn audit fix --force",
    "update:upgrade": "ncu --packageManager yarn --deep --upgrade"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@jamashita/eslint-plugin": "1.65.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "27.5.0",
    "concurrently": "7.1.0",
    "eslint": "8.14.0",
    "git-cz": "4.8.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "28.0.3",
    "lerna": "4.0.0",
    "lint-staged": "12.4.1",
    "npm-check-updates": "12.5.11",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.2",
    "semantic-release-monorepo": "7.0.5",
    "sort-package-json": "1.57.0",
    "ts-jest": "28.0.1",
    "typescript": "4.6.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public"
  }
}
